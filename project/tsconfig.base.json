{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "strict": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "paths": {
      "@project/config/config-app": ["libs/config/config-app/src/index.ts"],
      "@project/config/config-jwt": ["libs/config/config-jwt/src/index.ts"],
      "@project/config/config-mongo": ["libs/config/config-mongo/src/index.ts"],
      "@project/config/config-rabbitmq": ["libs/config/config-rabbitmq/src/index.ts"],
      "@project/config/config-mail": ["libs/config/config-mail/src/index.ts"],
      "@project/config/config-users": ["libs/config/config-users/src/index.ts"],
      "@project/config/config-redis": ["libs/config/config-redis/src/index.ts"],
      "@project/models/posts-models": ["libs/models/posts-models/src/index.ts"],
      "@project/shared/app-types": ["libs/shared/app-types/src/index.ts"],
      "@project/shared/shared-decorators": ["libs/shared/shared-decorators/src/index.ts"],
      "@project/shared/shared-pipes": ["libs/shared/shared-pipes/src/index.ts"],
      "@project/util/util-core": ["libs/util/util-core/src/index.ts"],
      "@project/util/util-types": ["libs/util/util-types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
